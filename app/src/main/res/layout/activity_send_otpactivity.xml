<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="30dp"
    android:orientation="vertical"
    tools:context=".activity.SendOTPActivity">

    <ImageButton
        android:onClick="back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="30dp"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_home" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/img_logologin2" />
    <EditText
        android:id="@+id/edt_otp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:drawableStart="@drawable/ic_phonelocked"
        android:drawablePadding="15dp"
        android:fontFamily="sans-serif"
        android:hint="Nhập mã OTP"
        android:singleLine="true"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_radius_login"
        android:fontFamily="@font/arimo_bold"
        android:padding="13dp"
        android:text="Xác Nhận"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bạn không nhận được mã OTP?"
            android:textColor="#848080"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/send_otp_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Gửi lại"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>